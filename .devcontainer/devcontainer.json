{
	"name": "Python & Typescript",
	"image": "ghcr.io/prulloac/base:bookworm",

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/prulloac/devcontainer-features/bun:1": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/azure/azure-dev/azd:0": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainer-community/devcontainer-features/astral.sh-uv:1": {},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {}
	}

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8500, 5173],

	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": []
		}
	},
	
	// Port attributes for better dev experience
	"portsAttributes": {
		"8500": {
			"label": "Backend API",
			"onAutoForward": "notify"
		},
		"5173": {
			"label": "Frontend Dev",
			"onAutoForward": "notify"
		}
	}

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
