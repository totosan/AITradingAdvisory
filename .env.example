# MagenticOne Crypto Analysis Platform - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Azure OpenAI Configuration (Required)
# =============================================================================

AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_MODEL_NAME=gpt-4o  # Optional: defaults to deployment name

# Embedding model for semantic tool search (optional)
# Uses text-embedding-3-small by default
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum number of turns for agent conversations
MAX_TURNS=20

# Maximum stalls before stopping
MAX_STALLS=3

# Output directory for charts, reports, etc.
OUTPUT_DIR=outputs

# =============================================================================
# Exchange Configuration
# =============================================================================

# Default exchange provider: 'bitget' (recommended) or 'coingecko'
# Bitget provides real-time data, order books, and futures data
# CoinGecko is used as fallback for coins not listed on Bitget
EXCHANGE_DEFAULT_PROVIDER=bitget

# Enable automatic fallback to CoinGecko when Bitget fails
EXCHANGE_FALLBACK_ENABLED=true

# =============================================================================
# Bitget API Credentials (Required for Bitget as default provider)
# =============================================================================

# Get your API keys from: https://www.bitget.com/api
BITGET_API_KEY=your-bitget-api-key
BITGET_API_SECRET=your-bitget-api-secret
BITGET_PASSPHRASE=your-bitget-passphrase

# =============================================================================
# Web Application Configuration (Phase 1+)
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL (for WebSocket connections)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Secrets Management (Phase 4+)
# =============================================================================

# Directory for encrypted secrets storage
SECRETS_DIR=/app/data

# =============================================================================
# Authentication (Phase 6+)
# =============================================================================

# Admin user email - created at startup if not exists
# The temporary password will be logged to console on first run
ADMIN_EMAIL=admin@example.com

# JWT secret key for token signing
# If not set, a random key is generated (tokens invalid after restart)
# Generate a secure key with: openssl rand -base64 32
JWT_SECRET_KEY=

# JWT token expiration in minutes (default: 60)
JWT_EXPIRE_MINUTES=60

# Allowed emails for registration (comma-separated, case-insensitive)
# Empty or not set = registration closed for everyone
# Example: ALLOWED_EMAILS=user1@example.com,user2@example.com
ALLOWED_EMAILS=toto_san@live.com,iwos@live.de

# =============================================================================
# Docker Configuration
# =============================================================================

# Ollama URL when running in Docker (uses host networking)
# OLLAMA_BASE_URL=http://host.docker.internal:11434
